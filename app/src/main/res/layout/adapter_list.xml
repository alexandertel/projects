<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_article_small"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:image="PIC" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/tv_article_name_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="ABC" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/tv_article_date"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="135dp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_article_name_list"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="ABC" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/tv_article_number"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:minWidth="24dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="65dp"
        android:background="#000000"
        android:gravity="center"
        android:lines="1"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_article_small"
        app:layout_constraintRight_toRightOf="@id/iv_article_small"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        tools:text="ABC" />

</androidx.constraintlayout.widget.ConstraintLayout>
